{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "boundless",
  "colors": {
    "primary": "#16A34A"
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": {
    "light": "/logo/favicon.svg",
    "dark": "/logo/favicon-dark.svg"
  },
  "fonts": {
    "heading": {
      "family": "Self Modern",
      "source": "/fonts/self-modern/SelfModernSemiBold.woff2",
      "weight": 700,
      "format": "woff2"
    },
    "body": {
      "family": "Replica",
      "source": "/fonts/replica/ReplicaRegular.woff2",
      "format": "woff2"
    }
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Explorer",
        "href": "https://explorer.boundless.network/orders",
        "icon": "magnifying-glass-arrow-right"
      },
      {
        "label": "Support Forum",
        "href": "https://github.com/boundless-xyz/boundless/discussions",
        "icon": "circle-question"
      }
    ],
    "primary": {
      "type": "github",
      "href": "https://github.com/boundless-xyz/boundless"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/boundless_xyz",
      "github": "https://github.com/boundless-xyz",
      "discord": "https://discord.com/invite/boundlessxyz"
    }
  }
}
