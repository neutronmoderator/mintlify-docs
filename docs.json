{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Boundless",
  "colors": {
    "primary": "#16A34A"
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "background": {
    "color": {
      "light": "#EFECE3",
      "dark": "#1e1d1f"
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": {
    "light": "/logo/favicon.svg",
    "dark": "/logo/favicon-dark.svg"
  },
  "fonts": {
    "heading": {
      "family": "Self Modern",
      "source": "/fonts/self-modern/SelfModernSemiBold.woff2",
      "weight": 700,
      "format": "woff2"
    },
    "body": {
      "family": "Replica",
      "source": "/fonts/replica/ReplicaRegular.woff2",
      "format": "woff2"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Build",
        "groups": [
          {
            "group": "Getting started",
            "expanded": false,
            "pages": [
              "developers/quick-start",
              "developers/proof-lifecycle"
            ]
          },
          {
            "group": "Introduction",
            "pages": [
              "developers/what",
              "developers/why"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "developers/tutorials/build",
              "developers/tutorials/auction",
              "developers/tutorials/request",
              "developers/tutorials/tracking",
              "developers/tutorials/use",
              "developers/tutorials/troubleshooting"
            ]
          },
          {
            "group": "Tutorials",
            "pages": [
              "developers/tutorials/callbacks",
              "developers/tutorials/proof-composition",
              "developers/tutorials/proof-types",
              "developers/tutorials/bonsai",
              "developers/tutorials/sensitive-inputs",
              "developers/tutorials/smart-contract-requestor"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Prove",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      },
      {
